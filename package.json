{
  "name": "discord-bots-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "A monorepo for managing multiple Discord bots.",
  "author": "Javis",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Javis603/Discord-AIBot"
  },
  "workspaces": [
